<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/quizContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/task_due_background"
            android:text="Generated by AI"
            android:textColor="@color/view_task"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/taskHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="AI Quiz"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/taskDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Task Description"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@color/view_task"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Question 1"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/optionsGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <RadioButton
                    android:id="@+id/option1A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer 1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/option1B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer 2"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/option1C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer 3"
                    android:textSize="16sp" />
            </RadioGroup>

            <!-- Question 2 -->
            <TextView
                android:id="@+id/question2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Question 2"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/optionsGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <RadioButton
                    android:id="@+id/option2A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer 1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/option2B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer 2"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/option2C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer 3"
                    android:textSize="16sp" />
            </RadioGroup>

            <!-- Question 3 -->
            <TextView
                android:id="@+id/question3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Question 3"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/optionsGroup3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <RadioButton
                    android:id="@+id/option3A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer 1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/option3B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer 2"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/option3C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer 3"
                    android:textSize="16sp" />
            </RadioGroup>

            <!-- Question 4 -->
            <TextView
                android:id="@+id/question4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Question 4"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/optionsGroup4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <RadioButton
                    android:id="@+id/option4A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer 1"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/option4B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer 2"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/option4C"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answer 3"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:text="Submit" />
    </LinearLayout>
</ScrollView>
